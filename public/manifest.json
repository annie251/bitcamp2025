{
  "manifest_version": 3,
  "name": "Purrodoro",
  "description": "Cute ginger cat Pomodoro Timer",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "notifications"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "favicon.ico",
    "32": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  }
}
